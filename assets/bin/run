#!/bin/sh

oc_node_labels=/var/lib/tuned/ocp-node-labels.cfg

SYSTEMD_IGNORE_CHROOT=1 systemctl disable tuned --now || :

openshift-tuned -p 8080 \
           -l $oc_node_labels \
           --watch /etc/tuned/recommend.d/ \
           --watch /var/lib/tuned/profiles-data/ \
           ${OCP_NODE_NAME}
